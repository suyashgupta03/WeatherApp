<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?colorTextDefault</item>
    </style>

    <style name="TextAppearance.App.Headline">
        <item name="android:textSize">@dimen/text_size_normal</item>

    </style>

    <style name="TextAppearance.App.Title">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.App.Header">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextAppearance.App.Error">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>