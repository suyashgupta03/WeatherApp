<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorTextDefault">@color/black</item>

        <item name="textAppearanceHeadline">@style/TextAppearance.App.Headline</item>
        <item name="textAppearanceTitle">@style/TextAppearance.App.Title</item>
        <item name="textAppearanceHeader">@style/TextAppearance.App.Header</item>
        <item name="textAppearanceError">@style/TextAppearance.App.Error</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary"/>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary"/>

    <style name="Widget.App.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/gap_medium</item>
        <item name="android:layout_marginEnd">@dimen/gap_medium</item>
        <item name="android:layout_marginTop">@dimen/gap_small</item>
        <item name="android:layout_marginBottom">@dimen/gap_small</item>
    </style>

    <style name="viewPagerTitleStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_big</item>]
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/gap_small</item>
    </style>
</resources>